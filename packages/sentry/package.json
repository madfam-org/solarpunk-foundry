{
  "name": "@madfam/sentry",
  "version": "0.1.0",
  "description": "Shared Sentry configuration for the MADFAM/Solarpunk ecosystem",
  "author": "MADFAM <tech@madfam.io>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/madfam-io/solarpunk-foundry.git",
    "directory": "packages/sentry"
  },
  "homepage": "https://madfam.io",
  "bugs": {
    "url": "https://github.com/madfam-io/solarpunk-foundry/issues"
  },
  "keywords": [
    "madfam",
    "solarpunk",
    "sentry",
    "error-tracking",
    "monitoring",
    "observability",
    "performance"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./node": {
      "types": "./dist/node.d.ts",
      "import": "./dist/node.js",
      "require": "./dist/node.cjs"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "import": "./dist/react.js",
      "require": "./dist/react.cjs"
    },
    "./utils": {
      "types": "./dist/utils.d.ts",
      "import": "./dist/utils.js",
      "require": "./dist/utils.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo node_modules",
    "prepublishOnly": "pnpm build"
  },
  "peerDependencies": {
    "@sentry/nextjs": "^8.0.0",
    "@sentry/node": "^8.0.0",
    "@sentry/react": "^8.0.0",
    "react": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "@sentry/nextjs": {
      "optional": true
    },
    "@sentry/node": {
      "optional": true
    },
    "@sentry/react": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@sentry/nextjs": "^8.42.0",
    "@sentry/node": "^8.42.0",
    "@sentry/react": "^8.42.0",
    "@types/react": "^18.3.18",
    "react": "^18.3.1",
    "tsup": "^8.0.2",
    "typescript": "^5.7.2"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@9.15.0"
}
